<?xml version="1.0"?>
<robot name="sortibot_arm">

  <!-- whole robot static in Gazebo (no gravity, no falling) -->
  <gazebo>
    <static>true</static>
  </gazebo>

  <!-- ==== BASE PEDESTAL ON TABLE ==== -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.05"/>
      <mass value="2.0"/>
      <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder radius="0.07" length="0.10"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.15 0.15 0.15 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <cylinder radius="0.07" length="0.10"/>
      </geometry>
    </collision>
  </link>

  <!-- ==== LINK 1 (vertical column) ==== -->
  <link name="link1">
    <inertial>
      <origin xyz="0 0 0.15"/>
      <mass value="1.0"/>
      <inertia ixx="0.005" iyy="0.005" izz="0.002" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.15"/>
      <geometry>
        <box size="0.05 0.05 0.30"/>
      </geometry>
      <material name="arm_silver">
        <color rgba="0.8 0.8 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.15"/>
      <geometry>
        <box size="0.05 0.05 0.30"/>
      </geometry>
    </collision>
  </link>

  <!-- joint1: rotates around vertical axis -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child  link="link1"/>
    <origin xyz="0 0 0.10" rpy="0 0 0"/>
    <axis   xyz="0 0 1"/>
    <limit  lower="-3.14" upper="3.14" effort="15" velocity="1.5"/>
    <dynamics damping="4.0" friction="0.2"/>
  </joint>

  <!-- ==== LINK 2 (first arm segment) ==== -->
  <link name="link2">
    <inertial>
      <origin xyz="0 0 0.20"/>
      <mass value="0.8"/>
      <inertia ixx="0.004" iyy="0.004" izz="0.002" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.20"/>
      <geometry>
        <box size="0.04 0.08 0.40"/>
      </geometry>
      <material name="arm_light_gray">
        <color rgba="0.9 0.9 0.9 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.20"/>
      <geometry>
        <box size="0.04 0.08 0.40"/>
      </geometry>
    </collision>
  </link>

  <!-- joint2: shoulder pitch -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child  link="link2"/>
    <origin xyz="0 0 0.30" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
    <limit  lower="-1.5" upper="1.5" effort="15" velocity="1.5"/>
    <dynamics damping="4.0" friction="0.2"/>
  </joint>

  <!-- ==== LINK 3 (forearm) ==== -->
  <link name="link3">
    <inertial>
      <origin xyz="0 0 0.18"/>
      <mass value="0.6"/>
      <inertia ixx="0.003" iyy="0.003" izz="0.0015" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.18"/>
      <geometry>
        <box size="0.035 0.07 0.36"/>
      </geometry>
      <material name="arm_white">
        <color rgba="0.95 0.95 0.95 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.18"/>
      <geometry>
        <box size="0.035 0.07 0.36"/>
      </geometry>
    </collision>
  </link>

  <!-- joint3: elbow -->
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child  link="link3"/>
    <origin xyz="0 0 0.40" rpy="0 0 0"/>
    <axis   xyz="0 1 0"/>
    <limit  lower="-1.5" upper="1.5" effort="10" velocity="1.5"/>
    <dynamics damping="4.0" friction="0.2"/>
  </joint>

  <!-- ==== GRIPPER BODY ==== -->
  <link name="gripper_body">
    <inertial>
      <!-- added small inertial so gazebo treats it as a proper link (does not change visuals) -->
      <origin xyz="0 0 0.04"/>
      <mass value="0.1"/>
      <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0.04"/>
      <geometry>
        <box size="0.10 0.04 0.08"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.04"/>
      <geometry>
        <box size="0.10 0.04 0.08"/>
      </geometry>
    </collision>
  </link>

  <!-- joint4: make wrist joint REVOLUTE (was fixed) -->
  <!-- only change: type changed to revolute, axis + limits + dynamics added -->
  <joint name="joint4" type="revolute">
    <parent link="link3"/>
    <child  link="gripper_body"/>
    <origin xyz="0 0 0.36" rpy="0 0 0"/>
    <!-- choose axis that suits wrist rotation; keep it local Y so gripper opens/rotates pitch -->
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1.0"/>
    <dynamics damping="2.0" friction="0.1"/>
  </joint>

  <!-- ==== GRIPPER FINGERS (purely visual) ==== -->
  <link name="finger_left">
    <visual>
      <origin xyz="0.05 0.02 0.02"/>
      <geometry>
        <box size="0.02 0.04 0.10"/>
      </geometry>
      <material name="finger_gray">
        <color rgba="0.7 0.7 0.7 1"/>
      </material>
    </visual>
  </link>

  <joint name="finger_left_joint" type="fixed">
    <parent link="gripper_body"/>
    <child  link="finger_left"/>
    <origin xyz="0 0 0.04"/>
  </joint>

  <link name="finger_right">
    <visual>
      <origin xyz="-0.05 0.02 0.02"/>
      <geometry>
        <box size="0.02 0.04 0.10"/>
      </geometry>
      <material name="finger_gray">
        <color rgba="0.7 0.7 0.7 1"/>
      </material>
    </visual>
  </link>

  <joint name="finger_right_joint" type="fixed">
    <parent link="gripper_body"/>
    <child  link="finger_right"/>
    <origin xyz="0 0 0.04"/>
  </joint>
    
  <!-- ==== CAMERA LINK ON WRIST / END EFFECTOR ==== -->
  <link name="camera_link">
    <inertial>
      <!-- small inertial so gazebo treats camera_link as a proper link -->
      <origin xyz="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="1e-05" iyy="1e-05" izz="1e-05" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <!-- small box in front of the gripper, like a wrist camera -->
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.04 0.03 0.03"/>
      </geometry>
      <material name="camera_black">
        <color rgba="0.05 0.05 0.05 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.04 0.03 0.03"/>
      </geometry>
    </collision>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="gripper_body"/>
    <child  link="camera_link"/>
    <!-- Place camera a bit forward and slightly above the gripper, looking outward -->
    <!-- x  -> forward (same direction as fingers) -->
    <!-- y  -> sideways, z -> up -->
    <origin xyz="0.07 0 0.075" rpy="0 -1.3 0"/>
  </joint>

  <!-- ==== GAZEBO CAMERA SENSOR ON camera_link ==== -->
  <gazebo reference="camera_link">
    <sensor name="sortibot_camera" type="camera">
      <always_on>true</always_on>
      <update_rate>15.0</update_rate>
      <visualize>true</visualize>

      <camera>
        <horizontal_fov>1.2</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.02</near>
          <far>10.0</far>
        </clip>
      </camera>

      <plugin name="gazebo_ros_camera" filename="libgazebo_ros_camera.so">
        <ros>
          <!-- All camera topics will live under this namespace -->
          <namespace>/sortibot</namespace>
          <!-- Remap raw image topic -->
          <remapping>image_raw:=camera/image_raw</remapping>
        </ros>
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>
